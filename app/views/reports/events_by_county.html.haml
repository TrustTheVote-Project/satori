.page-header
  %h2 Report: Events by County
  %p= link_to "Back to Election: '#{@election.name}'", @election
  %p= link_to "Export to CSV", election_events_by_county_report_path(@election, format: 'csv')

.row
  .col-sm-12
    %table#report.stripe.row-border.dataTable
      %thead
        %th Jurisdiction
        - @report.columns.each do |c|
          %th= raw c.gsub('- ', '<br/>')

      %tbody
        - @report.rows.each do |county, values|
          %tr
            %td= county
            - @report.columns.each do |c|
              %td.text-center= values[c]

= content_for :scripts do
  = javascript_include_tag "reports"
